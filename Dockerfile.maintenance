FROM ubuntu:20.04

ENV DEBIAN_FRONTEND=noninteractive

# Install build dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    git \
    wget \
    curl \
    zip \
    unzip \
    patchelf \
    mingw-w64 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace

# Copy everything
COPY . .

# Make scripts executable
RUN chmod +x scripts/*.sh

CMD ["/bin/bash"]